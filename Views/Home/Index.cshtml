@{
    ViewData["Title"] = "Home Page";
}
@model List<PROG5_NinjaManager.Ninja>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>

    <h1>List of Ninjas</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Ninja Name</th>
            <th>Skill Level</th>
            <th>Weapons</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var ninja in Model)
        {
        <tr>
            <td>@ninja.Name</td>
            <td>@ninja.SkillLevel</td>
            <td>
                <ul>
                    @foreach (var weapon in ninja.Weapons)
                    {
                    <li>@weapon.Name (Damage: @weapon.Damage)</li>
                    }
                </ul>
            </td>
        </tr>
        }
        </tbody>
    </table>

</div>
