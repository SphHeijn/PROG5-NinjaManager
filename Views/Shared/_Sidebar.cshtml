<!-- Views/Shared/_Sidebar.cshtml -->
<div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark vh-100" style="width: 280px;">
    <a class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none" asp-action="NinjaList">
        <img class="w-25" src="~/Images/Ninja.png"/>
        <span>Ninja Manager</span>
    </a>
    <hr/>
    <ul class="nav nav-pills flex-column mb-auto">
        <li class="nav-item">
            <a class="nav-link text-white @(ViewContext.RouteData.Values["action"]?.ToString() == "NinjaList" ? "active" : "")" asp-action="NinjaList">Ninja's</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white @(ViewContext.RouteData.Values["action"]?.ToString() == "Shop" ? "active" : "")"
               asp-action="Shop">Shop</a>
        </li>
    </ul>
</div>